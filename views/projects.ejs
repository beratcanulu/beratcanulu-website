<!-- Projects Header -->
<section class="py-20 bg-gradient-to-r from-primary-600 to-primary-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl font-bold mb-6">Projelerim</h1>
        <p class="text-xl text-primary-100 max-w-3xl mx-auto">
            Geliştirdiğim projeler ve kullandığım teknolojiler
        </p>
    </div>
</section>

<!-- Projects Grid -->
<section class="py-20 bg-blue-100/50 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% projects.forEach(function(project) { %>
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-4 overflow-hidden">
                <div class="h-48 bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
                    <i class="fas fa-code text-white text-6xl"></i>
                </div>
                
                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-3"><%= project.title %></h3>
                    <p class="text-gray-600 mb-4"><%= project.description %></p>
                    
                    <div class="mb-6">
                        <h4 class="text-sm font-semibold text-gray-700 mb-2">Kullanılan Teknolojiler:</h4>
                        <div class="flex flex-wrap gap-2">
                            <% project.technologies.forEach(function(tech) { %>
                            <span class="px-3 py-1 bg-primary-100 text-primary-700 text-xs font-medium rounded-full">
                                <%= tech %>
                            </span>
                            <% }); %>
                        </div>
                    </div>
                    
                    <div class="flex gap-3">
                        <a href="<%= project.github %>" target="_blank" class="flex-1 bg-gray-900 text-white py-2 px-4 rounded-lg text-center hover:bg-gray-800 transition-colors">
                            <i class="fab fa-github mr-2"></i>GitHub
                        </a>
                        <a href="<%= project.live %>" target="_blank" class="flex-1 bg-primary-600 text-white py-2 px-4 rounded-lg text-center hover:bg-primary-700 transition-colors">
                            <i class="fas fa-external-link-alt mr-2"></i>Demo
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Additional Projects Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Daha Fazla Proje</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                GitHub'da daha fazla proje ve açık kaynak katkılarımı görebilirsiniz
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-gray-50 p-8 rounded-2xl">
                <div class="flex items-center mb-4">
                    <i class="fab fa-github text-4xl text-gray-700 mr-4"></i>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900">GitHub Profilim</h3>
                        <p class="text-gray-600">Tüm projelerimi ve kodlarımı inceleyin</p>
                    </div>
                </div>
                <a href="https://github.com/beratcanulu" target="_blank" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
                    Profili Görüntüle <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
            
            <div class="bg-gray-50 p-8 rounded-2xl">
                <div class="flex items-center mb-4">
                    <i class="fas fa-code-branch text-4xl text-gray-700 mr-4"></i>
                    <div>
                        <h3 class="text-xl font-semibold text-gray-900">Açık Kaynak</h3>
                        <p class="text-gray-600">Topluluğa katkıda bulunduğum projeler</p>
                    </div>
                </div>
                <a href="https://github.com/beratcanulu?tab=repositories&q=&type=source" target="_blank" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium">
                    Repoları Görüntüle <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-primary-600">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-white mb-6">Proje Fikirleriniz Var mı?</h2>
        <p class="text-xl text-primary-100 mb-8">
            Birlikte çalışmak ister misiniz? Hemen iletişime geçin!
        </p>
        <a href="/contact" class="bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 inline-block">
            İletişime Geç
        </a>
    </div>
</section> 