<!-- About Header -->
<section class="py-20 bg-gradient-to-r from-primary-600 to-primary-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl font-bold mb-6">Hakkımda</h1>
        <p class="text-xl text-primary-100 max-w-3xl mx-auto">
            Yazılım geliştirme tutkum ve kariyer yolculuğum hakkında daha fazla bilgi
        </p>
    </div>
</section>

<!-- Personal Story -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="animate-slide-up">
                <h2 class="text-4xl font-bold text-gray-900 mb-6">Merhaba, Ben <%= name %></h2>
                <p class="text-lg text-gray-600 mb-6">
                    Bilgisayar mühendisliği eğitimimi tamamladıktan sonra, yazılım geliştirme alanında 
                    kendimi geliştirmeye odaklandım. Modern web teknolojileri konusunda uzmanlaşarak, 
                    kullanıcı deneyimini ön planda tutan çözümler geliştiriyorum.
                </p>

                <p class="text-lg text-gray-600">
                    Sürekli öğrenmeye ve kendimi geliştirmeye odaklanarak, en güncel teknolojileri 
                    takip ediyor ve projelerimde kullanıyorum.
                </p>
            </div>
            
            <div class="animate-slide-up">
                <div class="bg-gray-100 rounded-2xl p-12">
                    <img src="/images/beratsite.jpg" alt="Berat Can Ulu" class="w-full h-[500px] object-contain rounded-xl shadow-lg">
                </div>
            </div>
        </div>
    </div>
</section>



<!-- Experience Timeline -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Kariyer Yolculuğum</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Profesyonel deneyimim ve eğitim geçmişim
            </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
            <div class="space-y-8">
                <!-- Cumhuriyet Üniversitesi -->
                <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-blue-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-xl font-bold text-gray-900">Cumhuriyet Üniversitesi</h3>
                            <p class="text-blue-600 font-medium">Computer Engineering</p>
                            <p class="text-gray-600">2017-2025</p>
                        </div>
                        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-graduation-cap text-blue-600 text-2xl"></i>
                        </div>
                    </div>
                </div>
                
                <!-- Reset Bilgi Teknolojileri -->
                <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-green-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-xl font-bold text-gray-900">Reset Bilgi Teknolojileri</h3>
                            <p class="text-green-600 font-medium">Internship</p>
                            <p class="text-gray-600">2025</p>
                        </div>
                        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-briefcase text-green-600 text-2xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 