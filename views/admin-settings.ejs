<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ayarlar - Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #f8fafc;
            color: #1e293b;
        }

        .admin-header {
            background: #1e3a8a;
            color: white;
            padding: 1.5rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .admin-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .admin-subtitle {
            opacity: 0.9;
            font-weight: 300;
        }

        .admin-nav {
            background: white;
            border-bottom: 1px solid #e2e8f0;
            margin-bottom: 2rem;
        }

        .admin-nav ul {
            display: flex;
            list-style: none;
            gap: 2rem;
            padding: 1rem 0;
        }

        .admin-nav a {
            text-decoration: none;
            color: #64748b;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .admin-nav a:hover,
        .admin-nav a.active {
            background: #2563eb;
            color: white;
        }

        .settings-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .settings-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            border: 1px solid #e2e8f0;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #1e293b;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card-title i {
            color: #2563eb;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #374151;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f8fafc;
        }

        .form-input:focus {
            outline: none;
            border-color: #2563eb;
            background: white;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        .form-textarea {
            min-height: 100px;
            resize: vertical;
        }

        .form-select {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            background: #f8fafc;
            cursor: pointer;
        }

        .form-select:focus {
            outline: none;
            border-color: #2563eb;
            background: white;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .toggle-slider {
            background-color: #2563eb;
        }

        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

        .toggle-label {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .toggle-text {
            font-weight: 500;
            color: #374151;
        }

        .save-btn {
            background: #059669;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .save-btn:hover {
            background: #047857;
            transform: translateY(-2px);
        }

        .save-btn:disabled {
            background: #9ca3af;
            cursor: not-allowed;
            transform: none;
        }

        .backup-section {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            border: 1px solid #e2e8f0;
            margin-bottom: 2rem;
        }

        .backup-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .backup-btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-backup {
            background: #2563eb;
            color: white;
        }

        .btn-backup:hover {
            background: #1d4ed8;
        }

        .btn-restore {
            background: #f59e0b;
            color: white;
        }

        .btn-restore:hover {
            background: #d97706;
        }

        .btn-download {
            background: #059669;
            color: white;
        }

        .btn-download:hover {
            background: #047857;
        }

        .back-to-site {
            text-align: center;
            margin-top: 2rem;
        }

        .back-to-site a {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: #1e3a8a;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .back-to-site a:hover {
            background: #1e40af;
            transform: translateY(-2px);
        }

        @media (max-width: 768px) {
            .admin-nav ul {
                flex-direction: column;
                gap: 1rem;
            }
            
            .settings-grid {
                grid-template-columns: 1fr;
            }
            
            .backup-actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <!-- Admin Header -->
    <header class="admin-header">
        <div class="admin-container">
            <h1 class="admin-title">Ayarlar</h1>
            <p class="admin-subtitle">Berat Can Ulu Website - Site Konfigürasyonu</p>
        </div>
    </header>

    <!-- Admin Navigation -->
    <nav class="admin-nav">
        <div class="admin-container">
            <ul>
                <li><a href="/admin">Dashboard</a></li>
                <li><a href="/admin-messages">Mesajlar</a></li>
                <li><a href="/admin-settings" class="active">Ayarlar</a></li>
            </ul>
        </div>
    </nav>

    <!-- Settings Container -->
    <div class="admin-container">
        <div class="settings-grid">
            <!-- Site Settings -->
            <div class="settings-card">
                <h2 class="card-title">
                    <i class="fas fa-cog"></i>
                    Site Ayarları
                </h2>
                <form id="siteSettingsForm">
                    <div class="form-group">
                        <label class="form-label">Site Başlığı</label>
                        <input type="text" class="form-input" value="Berat Can Ulu" placeholder="Site başlığı">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Site Açıklaması</label>
                        <textarea class="form-input form-textarea" placeholder="Site açıklaması">Computer Engineer & Software Developer Portfolio</textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">İletişim E-posta</label>
                        <input type="email" class="form-input" value="beratcanulu@gmail.com" placeholder="İletişim e-posta">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Telefon Numarası</label>
                        <input type="tel" class="form-input" value="+90 553 587 30 99" placeholder="Telefon numarası">
                    </div>
                    <button type="submit" class="save-btn">
                        <i class="fas fa-save"></i>
                        Ayarları Kaydet
                    </button>
                </form>
            </div>

            <!-- Display Settings -->
            <div class="settings-card">
                <h2 class="card-title">
                    <i class="fas fa-palette"></i>
                    Görünüm Ayarları
                </h2>
                <form id="displaySettingsForm">
                    <div class="form-group">
                        <label class="form-label">Tema</label>
                        <select class="form-select">
                            <option value="light">Açık Tema</option>
                            <option value="dark">Koyu Tema</option>
                            <option value="auto">Otomatik</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Renk Şeması</label>
                        <select class="form-select">
                            <option value="blue">Mavi</option>
                            <option value="green">Yeşil</option>
                            <option value="purple">Mor</option>
                            <option value="red">Kırmızı</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="toggle-label">
                            <span class="toggle-text">Animasyonları Göster</span>
                            <label class="toggle-switch">
                                <input type="checkbox" checked>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="toggle-label">
                            <span class="toggle-text">Parçacık Efektleri</span>
                            <label class="toggle-switch">
                                <input type="checkbox" checked>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="save-btn">
                        <i class="fas fa-save"></i>
                        Görünümü Kaydet
                    </button>
                </form>
            </div>
        </div>

        <!-- Backup Section -->
        <div class="backup-section">
            <h2 class="card-title">
                <i class="fas fa-database"></i>
                Yedekleme ve Geri Yükleme
            </h2>
            <p style="color: #64748b; margin-bottom: 1rem;">
                Site verilerinizi yedekleyin, geri yükleyin veya indirin.
            </p>
            <div class="backup-actions">
                <button class="backup-btn btn-backup">
                    <i class="fas fa-download"></i>
                    Yedek Al
                </button>
                <button class="backup-btn btn-restore">
                    <i class="fas fa-upload"></i>
                    Geri Yükle
                </button>
                <button class="backup-btn btn-download">
                    <i class="fas fa-file-archive"></i>
                    Son Yedeği İndir
                </button>
            </div>
        </div>

        <!-- Back to Site -->
        <div class="back-to-site">
            <a href="/">
                <i class="fas fa-arrow-left"></i>
                Siteye Dön
            </a>
        </div>
    </div>

    <script>
        // Form submissions
        document.getElementById('siteSettingsForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const saveBtn = this.querySelector('.save-btn');
            const originalText = saveBtn.innerHTML;
            
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...';
            saveBtn.disabled = true;
            
            // Simulate save
            setTimeout(() => {
                saveBtn.innerHTML = '<i class="fas fa-check"></i> Kaydedildi!';
                saveBtn.style.background = '#059669';
                
                setTimeout(() => {
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                    saveBtn.style.background = '#059669';
                }, 2000);
            }, 1500);
        });

        document.getElementById('displaySettingsForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const saveBtn = this.querySelector('.save-btn');
            const originalText = saveBtn.innerHTML;
            
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...';
            saveBtn.disabled = true;
            
            // Simulate save
            setTimeout(() => {
                saveBtn.innerHTML = '<i class="fas fa-check"></i> Kaydedildi!';
                saveBtn.style.background = '#059669';
                
                setTimeout(() => {
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;
                    saveBtn.style.background = '#059669';
                }, 2000);
            }, 1500);
        });

        // Backup actions
        document.querySelector('.btn-backup').addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Yedekleniyor...';
            this.disabled = true;
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-check"></i> Yedek Tamamlandı!';
                this.style.background = '#059669';
                
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-download"></i> Yedek Al';
                    this.disabled = false;
                    this.style.background = '#2563eb';
                }, 2000);
            }, 2000);
        });

        document.querySelector('.btn-restore').addEventListener('click', function() {
            if (confirm('Yedekten geri yüklemek istediğinizden emin misiniz? Bu işlem mevcut verileri değiştirecektir.')) {
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Geri Yükleniyor...';
                this.disabled = true;
                
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-check"></i> Geri Yüklendi!';
                    this.style.background = '#059669';
                    
                    setTimeout(() => {
                        this.innerHTML = '<i class="fas fa-upload"></i> Geri Yükle';
                        this.disabled = false;
                        this.style.background = '#f59e0b';
                    }, 2000);
                }, 2000);
            }
        });

        document.querySelector('.btn-download').addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> İndiriliyor...';
            this.disabled = true;
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-check"></i> İndirildi!';
                this.style.background = '#059669';
                
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-file-archive"></i> Son Yedeği İndir';
                    this.disabled = false;
                    this.style.background = '#059669';
                }, 2000);
            }, 1500);
        });
    </script>
</body>
</html> 